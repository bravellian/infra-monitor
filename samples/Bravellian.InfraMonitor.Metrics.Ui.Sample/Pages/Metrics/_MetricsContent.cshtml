@using System.Text.Json
@model Bravellian.InfraMonitor.Metrics.Ui.Sample.Pages.Metrics.IndexModel

@if (!Model.HasEndpoints)
{
    <div class="alert alert-warning d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
        <div>
            <strong>No metrics endpoints configured.</strong>
            Add at least one service instance in Setup to start scraping metrics.
        </div>
        <a class="btn btn-warning" asp-page="/Setup">Go to setup</a>
    </div>
}
else
{
    <div class="alert alert-info d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2">
        <div>
            Tracking <strong>@Model.EndpointCount</strong> endpoint@(Model.EndpointCount == 1 ? "" : "s") across
            <strong>@Model.Services.Count</strong> service@(Model.Services.Count == 1 ? "" : "s").
            <span class="text-muted small">
                Auto refresh @(Model.AutoRefreshSeconds > 0 ? $"every {Model.AutoRefreshSeconds} s" : "off")
            </span>
        </div>
        <button type="button" class="btn btn-sm btn-outline-primary" id="metricsRefreshNow">Refresh now</button>
    </div>

    @if (Model.PinnedMetrics.Count > 0)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h2 class="h6 text-uppercase text-muted mb-3">Pinned Metrics</h2>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var metric in Model.PinnedMetrics)
                    {
                        <form method="post" asp-page-handler="UnpinMetric" class="d-inline-flex align-items-center gap-2 border rounded px-2 py-1">
                            <input type="hidden" name="metricName" value="@metric" />
                            <span class="small">@metric</span>
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Unpin</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-body d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
            <div>
                <h2 class="h6 text-uppercase text-muted mb-1">Demo Custom Metric</h2>
                <p class="mb-0 text-muted">
                    Click to record a demo email send counter in the Infra Monitor app.
                </p>
            </div>
            <form method="post" asp-page-handler="DemoEmail">
                <button type="submit" class="btn btn-outline-primary">Record demo email send</button>
            </form>
        </div>
    </div>

    @foreach (var service in Model.Services)
    {
        <div class="service-block" data-service-name="@service.ServiceName">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mt-4">
            <div>
                <h2 class="h4 mb-1">@service.ServiceName</h2>
                <p class="text-muted mb-0">
                    @service.Aggregate.SuccessfulInstances of @service.Aggregate.InstanceCount instances reporting
                    @if (service.Aggregate.FailedInstances > 0)
                    {
                        <span class="text-danger">(@service.Aggregate.FailedInstances failed)</span>
                    }
                </p>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h3 class="h6 text-uppercase text-muted">Service Rollup</h3>
                @if (service.Aggregate.DashboardCards.Count == 0)
                {
                    <div class="alert alert-secondary mb-4">
                        No dashboard metrics were found in the scrape payload.
                    </div>
                }
                else
                {
                    <div class="row g-3 mb-4">
                        @foreach (var card in service.Aggregate.DashboardCards)
                        {
                            <div class="col-12 col-md-4 col-lg-3">
                                <div class="border rounded p-3 h-100">
                                    <div class="text-muted small">@card.Title</div>
                                    <div class="h5 mb-1">@card.Value</div>
                                    @if (!string.IsNullOrWhiteSpace(card.Description))
                                    {
                                        <div class="text-muted small">@card.Description</div>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    @if (service.Aggregate.DashboardCharts.Count > 0)
                    {
                        <div class="row g-3 mb-4">
                            @foreach (var chart in service.Aggregate.DashboardCharts)
                            {
                                <div class="col-12 col-lg-6">
                                    <div class="border rounded p-3 h-100">
                                        <div class="fw-semibold mb-2">@chart.Title</div>
                                        <canvas id="@chart.Id" height="140"></canvas>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary mb-4">
                            Charts will appear after multiple scrapes have been captured.
                        </div>
                    }
                }

                @if (service.Aggregate.PinnedCards.Count > 0)
                {
                    <h3 class="h6 text-uppercase text-muted">Pinned Metrics</h3>
                    <div class="row g-3 align-items-center mb-3">
                        <div class="col-12 col-lg-4">
                            <input type="text"
                                   class="form-control form-control-sm pinned-filter"
                                   placeholder="Filter pinned metrics"
                                   data-service-name="@service.ServiceName" />
                        </div>
                        <div class="col-12 col-lg-8 text-muted small">
                            Matches by metric name.
                        </div>
                    </div>
                    <div class="row g-3 mb-4">
                        @foreach (var card in service.Aggregate.PinnedCards)
                        {
                            <div class="col-12 col-md-4 col-lg-3 pinned-metric-item" data-metric-name="@card.Title">
                                <div class="border rounded p-3 h-100 d-flex flex-column gap-2">
                                    <div class="d-flex justify-content-between align-items-start gap-2">
                                        <div class="text-muted small">@card.Title</div>
                                        <form method="post" asp-page-handler="UnpinMetric">
                                            <input type="hidden" name="metricName" value="@card.Title" />
                                            <button type="submit" class="btn btn-sm btn-outline-secondary">Unpin</button>
                                        </form>
                                    </div>
                                    <div class="h5 mb-1">@card.Value</div>
                                    @if (!string.IsNullOrWhiteSpace(card.Description))
                                    {
                                        <div class="text-muted small">@card.Description</div>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    @if (service.Aggregate.PinnedCharts.Count > 0)
                    {
                        <div class="row g-3 mb-4">
                            @foreach (var chart in service.Aggregate.PinnedCharts)
                            {
                                <div class="col-12 col-lg-6 pinned-metric-item" data-metric-name="@chart.Title">
                                    <div class="border rounded p-3 h-100">
                                        <div class="fw-semibold mb-2">@chart.Title</div>
                                        <canvas id="@chart.Id" height="140"></canvas>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                }

                <div class="row g-3 mb-4">
                    <div class="col-12 col-md-3">
                        <div class="border rounded p-3 h-100">
                            <div class="text-muted small">Total samples</div>
                            <div class="h5 mb-0">@service.Aggregate.TotalSamples</div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="border rounded p-3 h-100">
                            <div class="text-muted small">Unique metrics</div>
                            <div class="h5 mb-0">@service.Aggregate.SeriesSummaries.Count</div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="border rounded p-3 h-100">
                            <div class="text-muted small">Avg scrape</div>
                            <div class="h5 mb-0">@service.Aggregate.AverageScrapeDurationMs.ToString("F0") ms</div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="border rounded p-3 h-100">
                            <div class="text-muted small">Latest scrape</div>
                            <div class="h6 mb-0">@service.Aggregate.LatestScrape?.ToLocalTime().ToString("g")</div>
                        </div>
                    </div>
                </div>

                <h3 class="h6 text-uppercase text-muted">Metric families</h3>
                <div class="table-responsive mb-4">
                    <table class="table table-sm table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th class="text-end">Series</th>
                                <th>Help</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var summary in service.Aggregate.SeriesSummaries)
                            {
                                var isPinned = Model.PinnedMetrics.Any(name =>
                                    string.Equals(name, summary.Name, StringComparison.OrdinalIgnoreCase));
                                <tr>
                                    <td class="fw-semibold">@summary.Name</td>
                                    <td>@(summary.Type ?? "-")</td>
                                    <td class="text-end">@summary.SeriesCount</td>
                                    <td class="text-muted">@summary.Help</td>
                                    <td class="text-end">
                                        @if (isPinned)
                                        {
                                            <form method="post" asp-page-handler="UnpinMetric">
                                                <input type="hidden" name="metricName" value="@summary.Name" />
                                                <button type="submit" class="btn btn-sm btn-outline-secondary">Unpin</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form method="post" asp-page-handler="PinMetric">
                                                <input type="hidden" name="metricName" value="@summary.Name" />
                                                <button type="submit" class="btn btn-sm btn-outline-primary">Pin</button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <h3 class="h6 text-uppercase text-muted">Sample series</h3>
                @if (service.Aggregate.TotalSamples > service.Aggregate.Samples.Count)
                {
                    <p class="text-muted small mb-2">
                        Showing @service.Aggregate.Samples.Count of @service.Aggregate.TotalSamples samples.
                    </p>
                }
                <div class="table-responsive mb-4">
                    <table class="table table-sm table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Labels</th>
                                <th>Type</th>
                                <th class="text-end">Value</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sample in service.Aggregate.Samples)
                            {
                                <tr>
                                    <td class="fw-semibold">@sample.Name</td>
                                    <td class="text-muted">@sample.Labels</td>
                                    <td>@(sample.Type ?? "-")</td>
                                    <td class="text-end">@sample.Value</td>
                                    <td class="text-end">
                                        <form method="post" asp-page-handler="PinMetric">
                                            <input type="hidden" name="metricName" value="@sample.Name" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary">Pin</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <h3 class="h6 text-uppercase text-muted">Instances</h3>
        @foreach (var instance in service.Instances)
        {
            <details class="card shadow-sm mb-4">
                <summary class="card-header d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2">
                    <div>
                        <div class="fw-semibold">@instance.Registration.InstanceName</div>
                        <div class="text-muted small">@instance.Registration.EndpointUrl</div>
                    </div>
                    @if (instance.Error is null)
                    {
                        <span class="badge bg-success">OK</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Error</span>
                    }
                </summary>
                <div class="card-body">
                    @if (instance.Error is not null)
                    {
                        <div class="alert alert-danger mb-0">
                            <strong>Failed to scrape endpoint.</strong> @instance.Error
                        </div>
                    }
                    else
                    {
                        <h3 class="h6 text-uppercase text-muted">Instance Dashboard</h3>
                        @if (instance.DashboardCards.Count == 0)
                        {
                            <div class="alert alert-secondary mb-4">
                                No dashboard metrics were found in the scrape payload.
                            </div>
                        }
                        else
                        {
                            <div class="row g-3 mb-4">
                                @foreach (var card in instance.DashboardCards)
                                {
                                    <div class="col-12 col-md-4 col-lg-3">
                                        <div class="border rounded p-3 h-100">
                                            <div class="text-muted small">@card.Title</div>
                                            <div class="h5 mb-1">@card.Value</div>
                                            @if (!string.IsNullOrWhiteSpace(card.Description))
                                            {
                                                <div class="text-muted small">@card.Description</div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>

                            @if (instance.DashboardCharts.Count > 0)
                            {
                                <div class="row g-3 mb-4">
                                    @foreach (var chart in instance.DashboardCharts)
                                    {
                                        <div class="col-12 col-lg-6">
                                            <div class="border rounded p-3 h-100">
                                                <div class="fw-semibold mb-2">@chart.Title</div>
                                                <canvas id="@chart.Id" height="140"></canvas>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        }

                        <div class="row g-3 mb-4">
                            <div class="col-12 col-md-3">
                                <div class="border rounded p-3 h-100">
                                    <div class="text-muted small">Total samples</div>
                                    <div class="h5 mb-0">@instance.TotalSamples</div>
                                </div>
                            </div>
                            <div class="col-12 col-md-3">
                                <div class="border rounded p-3 h-100">
                                    <div class="text-muted small">Unique metrics</div>
                                    <div class="h5 mb-0">@instance.SeriesSummaries.Count</div>
                                </div>
                            </div>
                            <div class="col-12 col-md-3">
                                <div class="border rounded p-3 h-100">
                                    <div class="text-muted small">Scrape duration</div>
                                    <div class="h5 mb-0">@instance.Duration.TotalMilliseconds.ToString("F0") ms</div>
                                </div>
                            </div>
                            <div class="col-12 col-md-3">
                                <div class="border rounded p-3 h-100">
                                    <div class="text-muted small">Scraped at</div>
                                    <div class="h6 mb-0">@instance.Snapshot?.RetrievedAt.ToLocalTime().ToString("g")</div>
                                </div>
                            </div>
                        </div>

                        <h3 class="h6 text-uppercase text-muted">Metric families</h3>
                        <div class="table-responsive mb-4">
                            <table class="table table-sm table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Type</th>
                                        <th class="text-end">Series</th>
                                        <th>Help</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var summary in instance.SeriesSummaries)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@summary.Name</td>
                                            <td>@(summary.Type ?? "-")</td>
                                            <td class="text-end">@summary.SeriesCount</td>
                                            <td class="text-muted">@summary.Help</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <h3 class="h6 text-uppercase text-muted">Sample series</h3>
                        @if (instance.TotalSamples > instance.Samples.Count)
                        {
                            <p class="text-muted small mb-2">
                                Showing @instance.Samples.Count of @instance.TotalSamples samples.
                            </p>
                        }
                        <div class="table-responsive mb-4">
                            <table class="table table-sm table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Labels</th>
                                        <th>Type</th>
                                        <th class="text-end">Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sample in instance.Samples)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@sample.Name</td>
                                            <td class="text-muted">@sample.Labels</td>
                                            <td>@(sample.Type ?? "-")</td>
                                            <td class="text-end">@sample.Value</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <details>
                            <summary class="mb-2">Raw payload</summary>
                            <pre class="bg-light border rounded p-3">@instance.Snapshot?.RawPayload</pre>
                        </details>
                    }
                </div>
            </details>
        }
        </div>
    }
}

@{
    var charts = new List<object>();
    foreach (var service in Model.Services)
    {
        foreach (var chart in service.Aggregate.DashboardCharts.Concat(service.Aggregate.PinnedCharts))
        {
            charts.Add(new
            {
                chart.Id,
                chart.Title,
                Labels = chart.Points.Select(point => point.Timestamp.ToLocalTime().ToString("HH:mm:ss")).ToList(),
                Values = chart.Points.Select(point => point.Value).ToList()
            });
        }

        foreach (var instance in service.Instances)
        {
            foreach (var chart in instance.DashboardCharts)
            {
                charts.Add(new
                {
                    chart.Id,
                    chart.Title,
                    Labels = chart.Points.Select(point => point.Timestamp.ToLocalTime().ToString("HH:mm:ss")).ToList(),
                    Values = chart.Points.Select(point => point.Value).ToList()
                });
            }
        }
    }

    var chartsJson = JsonSerializer.Serialize(charts);
}

<script type="application/json" id="metrics-charts-data">@chartsJson</script>
